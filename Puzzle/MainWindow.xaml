<Window x:Class="Puzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=System"
        Title="Puzzle"
        WindowStartupLocation="CenterScreen"
        Background="#FF2F5F2E"
        >
    <Window.CommandBindings>
        <CommandBinding Command="Play" Executed="CommandBinding_Executed" CanExecute="CommandBinding_CanExecute"/>
    </Window.CommandBindings>

    <Window.Resources>
        <CroppedBitmap x:Key="TheBurningRange" Source="TheBurningRange.jpg" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Grid size: " VerticalAlignment="Center" Margin="20,0,0,0"/>
            <ComboBox ItemsSource="{Binding Sizes}" SelectedItem="{Binding MaxColumns}" Margin="0,2,0,2"/>
            <CheckBox Content="Use helper" Margin="10,0,0,0" VerticalContentAlignment="Center" IsChecked="{Binding UseHepler}"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1">
            <ItemsControl ItemsSource="{Binding Cells}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="Play" CommandParameter="{Binding Index}"
                                x:Name="button" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch">
                            <Image>
                                <Image.Source>
                                    <CroppedBitmap Source="{StaticResource TheBurningRange}" SourceRect="{Binding SourceRect}"/>
                                </Image.Source>
                            </Image>
                        </Button>
                        <DataTemplate.Triggers>
                            <DataTrigger Value="0" Binding="{Binding Index}">
                                <DataTrigger.Setters>
                                    <Setter TargetName="button" Property="Visibility" Value="Hidden"/>
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding MaxColumns}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Border>
    </Grid>
</Window>
